<Window x:Class="ThwargLauncher.AccountManagement.EditServersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditServersWindow" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <DataGrid HorizontalAlignment="Stretch" Margin="0,0,0,35" VerticalAlignment="Stretch"
                  ItemsSource="{Binding Path=ServerList}"
                  AutoGenerateColumns="False"
                  AlternatingRowBackground="Wheat">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Server" Binding="{Binding ServerName,Mode=TwoWay,UpdateSourceTrigger=LostFocus}"></DataGridTextColumn>
                <DataGridTextColumn Header="Address" Binding="{Binding ServerIpAndPort,Mode=TwoWay,UpdateSourceTrigger=LostFocus}"></DataGridTextColumn>
                <DataGridTextColumn Header="EMU" Binding="{Binding EMU,Mode=TwoWay,UpdateSourceTrigger=LostFocus}"></DataGridTextColumn>
                <DataGridTextColumn Header="Source" Binding="{Binding ServerSource,Mode=OneTime}" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAddServer" Command="{Binding AddServerCommand}"  Content="Add Server" />
    </StackPanel>
</Window>
